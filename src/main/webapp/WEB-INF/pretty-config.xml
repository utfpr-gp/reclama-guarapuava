    <url-mapping id="admin-list-occurrences">
        <pattern value="/admin/ocorrencias"/>
        <view-id value="/view/admin/ocorrencias.xhtml"/>
    </url-mapping>
    <url-mapping id="admin-occurrences-charts">
        <pattern value="/admin/graficos"/>
        <view-id value="/view/admin/graficos.xhtml"/>
    </url-mapping>
    <!--=========== ROTAS ADMIN =============-->

    <!--=========== ROTAS DE ERRO =============-->
    <url-mapping id="not-found">
        <pattern value="/404" />
        <view-id value="/view/error/404.xhtml" />
    </url-mapping>
    <!--=========== ROTAS DE ERRO =============-->
</pretty-config>
